<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-primary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td>
            <%= link_to friend.first_name + " " + friend.last_name, friend %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>
<% else %>
  <div class="card">
    <div class="card-header">
      <h1>Weldocome!</h1>
    </div>
    <div class="card-body">
      <p>In this webpage you can create your own friend's directory. You can add new friends, update your friends and even delete them. Just sign up and start your directory of friends.</p>
    </div>
  </div>
<% end %>